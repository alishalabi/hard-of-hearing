<div class="row">


  <div class="panel panel-default col-lg-6 col-lg-offset-2">
    <!-- Return Home -->
    <a href="/categories/{{phrase.category}}">Back To {{phrase.category}}</a>

    <!-- Phrase Data -->
    <h1>{{phrase.title}}</h1>
    <h3>Category: {{phrase.category}}</h3>
    <p>{{phrase.content}}</p>

    <!-- Edit Phrase -->
    <p><a href="/phrases/{{phrase._id}}/edit">Edit Phrase</a></p>

    <!-- Delete Phrase -->
    <p><form method="POST" action="/phrases/{{phrase._id}}?_method=DELETE">
      <button type="submit">Delete Phrase</button>
    </form>
  </div>

</div>
