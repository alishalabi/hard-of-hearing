<fieldset>
  <legend class="phrase-new-title">Phrase</legend>

  <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-bookmark"></i></span>
        <input id="phrase-title" class="form-control" type="text" name="title" placeholder="Title" required/>
      </div>
      <br>
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
        <input id="phrase-content" type="text" class="form-control" name="content" placeholder="Content" required>
  </div>
<br>

<div class="form-group">
  <label class="my-1 mr-2 phrase-new-category" for="phrase-category">Category:</label>
  <br>
  <select name="category" required>
    <option value="Eating Out">Eating out</option>
    <option value="Getting Around">Getting around</option>
    <option value="Essentials">Essentials</option>
    <option value="Emergencies">Emergencies</option>
    <option value="Responses">Responses</option>
    <option value="Other">Other</option>
  </select>

</div>

</fieldset>
